<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Myshop Customer Details</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="../assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="../assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="../assets/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../assets/images/favicon.png" />

    <style>
        td {
            color: white;
        }
        
        h1,
        h2,
        h3,
        h4 {
            color: cadetblue;
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <%- include('sidebar') %>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_navbar.html -->
                <%- include('header') %>
                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">

                            <h1>
                                <%= customer_data[0].full_name %>
                            </h1>


                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th colspan="3">
                                            <h4>Customer Number :
                                                <%= customer_data[0].c_id %>
                                            </h4>
                                        </th>
                                        <th>
                                            <h4>Personal Details</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Gender</th>
                                        <th>Category</th>
                                        <th colspan="2">Mobile Number</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%= customer_data[0].gender %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].category %>
                                        </td>
                                        <td colspan="2">
                                            <%= customer_data[0].mobile_no %>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th colspan="4">
                                            <h4>Address Details</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th colspan="4">Address</th>
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            <%= customer_data[0].address %>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th colspan="2">City</th>
                                        <th colspan="2">Pincode</th>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <%= customer_data[0].city %>
                                        </td>
                                        <td colspan="2">
                                            <%= customer_data[0].pincode %>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th colspan="4">
                                            <h4>Pant Measurement</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Length</th>
                                        <th>Waist</th>
                                        <th>Knee</th>
                                        <th>Loincloth</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%= customer_data[0].p_length %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].p_waist %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].p_knee %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].p_loincloth %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Thigh</th>
                                        <th>Ankel</th>
                                        <th colspan="2">sheet</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%= customer_data[0].p_thigh%>
                                        </td>
                                        <td>
                                            <%= customer_data[0].p_ankel %>
                                        </td>
                                        <td colspan="2">
                                            <%= customer_data[0].p_sheet %>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th colspan="4">
                                            <h4>Shirt Measurement</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Length</th>
                                        <th>Chest</th>
                                        <th>Stomach</th>
                                        <th>Solder</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%= customer_data[0].s_length %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_chest %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_stomach %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_solder %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Sleeves</th>
                                        <th>Collar</th>
                                        <th>Wrist</th>
                                        <th>Frant</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <%= customer_data[0].s_sleeves %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_collar %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_wrist %>
                                        </td>
                                        <td>
                                            <%= customer_data[0].s_frant %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="4">
                                            <h4>Description</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            <%= customer_data[0].description %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            <button class="btn btn-primary" onclick="window.location='../customer_display'">back</button>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                        <!-- content-wrapper ends -->
                        <!-- partial:partials/_footer.html -->
                        <%- include('footer') %>
                            <!-- partial -->
                    </div>
                    <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../assets/vendors/chart.js/Chart.min.js"></script>
    <script src="../assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="../assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="../assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="../assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../assets/js/off-canvas.js"></script>
    <script src="../assets/js/hoverable-collapse.js"></script>
    <script src="../assets/js/misc.js"></script>
    <script src="../assets/js/settings.js"></script>
    <script src="../assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="../assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
</body>

</html>